<div class="container">

   <h2>配送先登録/一覧</h2>
    <%= form_for(@delivery, url:deliveries_path) do |f| %>

	  <div class="field">
	    <%= f.label :郵便番号（ハイフンなし） %>
	    <%= f.text_field :postal_code %>
	  </div>

	  <div class="field">
	    <%= f.label :住所 %>
	    <%= f.text_field :address %>
	  </div>

	  <div class="field">
	    <%= f.label :宛名 %>
	    <%= f.text_field :name %>
	  </div>

	  <div class="actions">
	    <%= f.submit "登録する" %>
	  </div>

	<% end %>


	<table class="table-bordered">
	     <tr class="bg-light">
	       <th>郵便番号</th>
	       <th>住所</th>
	       <th>宛名</th>
	       <th></th>
	     </tr>
	  <% @deliveries.each do |delivery| %>
		 <tr>
		   <td><%= delivery["postal_code"] %></td>
		   <td><%= delivery["address"] %></td>
		   <td><%= delivery["name"] %></td>
		   <td><%= link_to "編集する" ,edit_delivery_path(delivery),class: 'btn btn-primary' %>
		   <%= link_to "削除する",delivery_path(delivery), method: :delete, class: 'btn btn-danger' %></td>
		 </tr>
	  <% end %>
    </table>

</div>