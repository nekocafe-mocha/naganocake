<div class="container">

	<h2>配送先登録/一覧</h2>

	<div class="col-xs-8">
		<table>
			<thead class="thead-light">
				<%= form_for(@delivery, url:deliveries_path) do |f| %>

				<tr>
					<div class="field">
						<th><%= f.label :郵便番号（ハイフンなし） %></th>
						<td><%= f.text_field :postal_code %></td>
					</div>
				</tr>

				<tr>
					<div class="field">
						<th><%= f.label :住所 %></th>
						<td><%= f.text_field :address %></td>
					</div>
				</tr>

				<tr>
					<div class="field">
						<th><%= f.label :宛名 %></th>
						<td><%= f.text_field :name %></td>
					</div>
				</tr>

				<div class="actions">
					<td><%= f.submit "登録する" %></td>
				</div>

				<% end %>
			</thead>
		</table>
	</div>

	<table class="table-bordered">
	   <thead class="thead-light">
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
		<% @deliveries.each do |delivery| %>
		<tr>
			<td style="width:15%"><%= delivery["postal_code"] %></td>
			<td style="width:35%"><%= delivery["address"] %></td>
			<td style="width:20%"><%= delivery["name"] %></td>
			<td style="width:40%"><%= link_to "編集する" ,edit_delivery_path(delivery),class: 'btn btn-primary btn-sm m-md-2' %>
				<%= link_to "削除する",delivery_path(delivery), method: :delete, class: 'btn btn-danger btn-sm m-md-2' %></td>
			</tr>
			<% end %>
		</thead>
	</table>

	</div>