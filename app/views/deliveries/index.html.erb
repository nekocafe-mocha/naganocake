<div class="container">
	<div class="row">
	    <div class="col-md-12 mb-4">
			<h3 class="mb-4 ml-4">配送先登録 / 一覧</h3>
			<%= form_for(@delivery, url: deliveries_path) do |f| %>
				<div class="form-group row">
	            	<%= f.label :'郵便番号（ハイフンなし）', class: "col-md-3 col-form-label" %>
	            	<div class="col-md-3">
		            	<%= f.text_field :postal_code, class: "form-control" %>
		            </div>
		        </div>
	        	<div class="form-group row">
	           		<%= f.label :住所, class: "col-md-3 col-form-label" %>
	            	<div class="col-md-6">
		            <%= f.text_area :address, class: "form-control" %>
		        	</div>
		        </div>
		        <div class="form-group row">
	            	<%= f.label :宛名, class: "col-md-3 col-form-label" %>
	            	<div class="col-md-6">
		            	<%= f.text_field :name, class: "form-control" %>
		            </div>
		            <div class="col-md-3 text-md-left">
	           			<%= f.submit '登録する', class: "btn btn-success ml-3" %>
	          		</div>
		        </div>
	        <% end %>
	    </div>
    </div>
	<div class="row">
		<div class="col-md-9 mt-4">
			<table class="table table-bordered">
				<thead class="thead-light">
					<tr>
						<th>郵便番号</th>
						<th>住所</th>
						<th>宛名</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @deliveries.each do |delivery| %>
						<tr>
							<td style="width:10%"><%= delivery.postal_code %></td>
							<td style="width:40%"><%= delivery.address %></td>
							<td style="width:25%"><%= delivery.name %></td>
							<td style="width:25%">
								<div class="text-md-center">
									<%= link_to "編集する" ,edit_delivery_path(delivery),class: 'btn btn-primary btn-sm m-md-1' %><%= link_to "削除する",delivery_path(delivery), method: :delete, class: 'btn btn-danger btn-sm m-md-1' %>
								</div>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>