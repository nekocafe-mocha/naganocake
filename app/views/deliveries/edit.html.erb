<div class="container">

  <h2>配送先編集</h2>

  <div class="col-xs-8">
   <table>
    <thead class="thead-light">
      <%= form_for(@delivery) do |f| %>
      <tr><div class="field">
        <th><%= f.label :郵便番号（ハイフンなし） %></th>
        <td><%= f.text_field :postal_code %></td>
      </div></tr>

      <tr><div class="field">
        <th><%= f.label :住所 %></th>
        <td><%= f.text_field :address %></td>
      </div></tr>

      <tr><div class="field">
        <th><%= f.label :宛名 %></th>
        <td><%= f.text_field :name %></td>
      </div></tr>

      <tr><div class="actions">
       <td><%= f.submit "編集する" %></td>
     </div></tr>
     <% end %>
   </thead>
 </table>
</div>



</div>