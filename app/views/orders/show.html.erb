<div class="container">
	<h2 class="mb-4">注文履歴詳細</h2>
	<div class="row">
		<div class="col-md-8">
			<p class="font-weight-bold mb-3">注文情報</p>
			<table class="table table-bordered">
				<thead class="thead-light">
					<tr>
						<th style="width: 20%;">注文日</th>
						<td style="width: 80%;">
							<%= @order.created_at.strftime('%Y/%m/%d') %>
						</td>
					</tr>
					<tr>
						<th class="align-middle">配送先</th>
						<td>
							<%= @order.postal_code %><br>
							<%= @order.address %><br>
							<%= @order.name %>
						</td>
					</tr>
					<tr>
						<th>支払方法</th>
						<td><%= @order.pay_select %></td>
					</tr>
					<tr>
						<th>ステータス</th>
						<td><%= @order.status %></td>
					</tr>
				</thead>
			</table>
		</div>
		<div class="col-md-4">
			<p class="font-weight-bold mb-3">請求情報</p>
			<table class="table table-bordered">
				<thead class="thead-light">
					<tr>
						<th>商品合計</th>
						<td><%= @order.total_price %></td>
					</tr>
					<tr>
						<th>配送料</th>
						<td><%= @order.postage %></td>
					</tr>
					<tr>
						<th class="font-weight-bold">ご請求金額</th>
						<td><%= @order.total_price+@order.postage %></td>
					</tr>
				</thead>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-md-10">
			<p class="font-weight-bold mb-3">注文内容</p>
			<table class="table table-bordered">
				<thead class="thead-light">
					<tr>
						<th style="width: 60%">商品</th>
						<th style="width: 20%">単価（税込）</th>
						<th style="width: 10%">個数</th>
						<th style="width: 10%">小計</th>
					</tr>
				</thead>
			  <% @order_items.each do |order_item| %>
				<tbody>
					<tr>
						<td><%= order_item.item.name %></td>
						<td><%= order_item.item.zeikomi %></td>
						<td><%= order_item.quantity %></td>
						<td>
							<%= order_item.item.zeikomi.to_i*order_item.quantity %>
						</td>
					</tr>
				</tbody>
			  <% end %>
			</table>
		</div>
	</div>
</div>