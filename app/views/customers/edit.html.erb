<div class="container">
  <div class="row">
  	<div class="col-xs-6">
  	  <h2 class="mb-4">登録情報編集</h2>
  	  <%= form_for(@customer) do |f| %>
        <div class="form-group">
          <%= f.label :姓%><%= f.text_field :family_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :名%><%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :セイ%><%= f.text_field :family_name_kana, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :メイ%><%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %><%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :"郵便番号（ハイフンなし）" %><%= f.text_field :postal_code, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :住所 %><%= f.text_area :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :"電話番号（ハイフンなし）" %><%= f.text_field :phone, class: "form-control" %>
        </div>
        <br>
        <div class="form-group">
         <%= f.submit '編集内容を保存する', class: "btn btn-primary" %>  <%= link_to "退会する", customer_registration_path, method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>

