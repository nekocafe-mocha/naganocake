<div class="container">
  <h3 class="mb-4">登録情報編集</h3>
  <form class="needs-validation" novalidate>
    <%= form_for(@customer) do |f| %>
      <form class="needs-validation" novalidate>
        <div class="row">
          <div class="col-md-3 mb-2">
            <br>
            <h6>名前</h6>
          </div>
          <div class="col-md-3 mb-2">
            <div class="form-group">
              <%= f.label :'（姓）'%><%= f.text_field :family_name, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-3 mb-2">
            <div class="form-group">
              <%= f.label :'（名）'%><%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-3 mb-2"></div>
          <div class="col-md-3 mb-2">
            <br>
            <h6>フリガナ</h6>
          </div>
          <div class="col-md-3 mb-2">
            <div class="form-group">
              <%= f.label :'（セイ）'%><%= f.text_field :family_name_kana, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-3 mb-2">
            <div class="form-group">
              <%= f.label :'（メイ）'%><%= f.text_field :first_name_kana, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-3 mb-2"></div>
          <div class="col-md-3 mb-2">
            <h6>メールアドレス</h6>
          </div>
          <div class="col-md-3 mb-2">
            <div class="form-group">
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6 mb-2"></div>
          <div class="col-md-3 mb-2">
            <h6>郵便番号（ハイフンなし）</h6>
          </div>
          <div class="col-md-3 mb-2">
            <div class="form-group">
              <%= f.text_field :postal_code, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6 mb-2"></div>
          <div class="col-md-3 mb-2">
            <h6>住所</h6>
          </div>
          <div class="col-md-6 mb-2">
            <div class="form-group">
              <%= f.text_area :address, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-3 mb-2"></div>
          <div class="col-md-3 mb-2">
            <h6>電話番号（ハイフンなし）</h6>
          </div>
          <div class="col-md-3 mb-2">
            <div class="form-group">
              <%= f.text_field :phone, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6 mb-2"></div>
          <br>
          <div class="col-md-3 mt-4"></div>
          <div class="col-md-3 mt-4">
            <div class="text-md-left">
              <%= f.submit '編集内容を保存する', class: "btn btn-primary mr-4" %>
            </div>
          </div>
          <div class="col-md-3 mt-4">
            <div class="text-md-right">
              <%= link_to "退会する", confirm_customer_path(id: @customer.id), class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </form>
    <% end %>
  </form>
</div>
