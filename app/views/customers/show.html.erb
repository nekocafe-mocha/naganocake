<div class="container">
  <div class="row">
  	<div class="col-xs-8">
  	  <h2 class="mb-4">マイページ</h2>
	  	<div class="mb-4">
	  	  <span class="font-weight-bold">登録情報</span>
	  	  <span><%= link_to "編集する", edit_customer_path, class: "btn btn-info" %></span>
	  	  <span><%= link_to "パスワードを変更する", customer_password_path, class: "btn btn-info" %></span>
	  	</div>
	  	<table class="table table-bordered">
	  	  <thead class="thead-light">
	  		<tr>
	          <th>名前</th><td><%= @customer.family_name %> <%= @customer.first_name %></td>
	        </tr>
	        <tr>
	           <th>カナ</th><td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
	        </tr>
	        <tr>
	          <th>郵便番号</th><td><%= @customer.postal_code %></td>
	        </tr>
	        <tr>
	          <th>住所</th><td><%= @customer.address %></td>
	        </tr>
	        <tr>
	          <th>電話番号</th><td><%= @customer.phone %></td>
	        </tr>
	        <tr>
	          <th>メールアドレス</th><td><%= @customer.email %></td>
	        </tr>
	      </thead>
	    </table>
  	</div>
  </div>
</div>