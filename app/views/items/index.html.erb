<div class="container">
  <div class="row">
  	<div class="col-md-3">
  	  <table class="table table-bordered">
  	  	<thead>
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= link_to category.name, items_path(category_id: category.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-9">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 mb-4">
            <div class="card">
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag item, :image,　format: 'jpeg', fallback: "no_image.jpg", size: "100%", class: "card-img-top"%>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text">
                  ¥ <%= item.price %>
                </p>
                <% if item.status == '販売中' %>
                  <p class="card-text"><br></p>
                <% else %>
                  <p class="card-text">売切れ</p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <%= paginate @items, class: "paginate" %>
      </div>
    </div>
  </div>
</div>