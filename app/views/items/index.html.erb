<div class="container">
  <div class="row">
  	<div class="col-md-3">
  	  <table class="table table-bordered">
  	  	<thead>
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= link_to category.name, items_path(category_id: category.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-9">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 mb-4">
            <div class="card">
              <%= attachment_image_tag item, :image,　format: 'jpeg', fallback: "no_image.jpg", size: "100%", class: "card-img-top"%>
              <div class="card-body">
                <h5 class="card-title"><%= link_to item.name, item_path(item) %></h5>
                <p class="card-text">
                  <%= item.price %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>