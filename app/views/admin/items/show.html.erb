<div class="container">
	<h2 class="font-weight-bold mb-4">商品 詳細画面</h2>
	<div class="row">
		<div class="col-md-4 text-center">
			<%= attachment_image_tag @item, :image, :fill, 270, 200, format: 'jpeg' %>
		</div>

		<table class="table table-borderless col-md-5">
			<tr>
				<th class="small" style="width: 35%">商品名</th>
				<td style="width: 65%"><%= @item.name %></td>
			</tr>
			<tr>
				<th class="small">商品説明</th>
				<td><%= @item.caption %></td>
			</tr>
			<tr>
				<th class="small">ジャンル</th>
				<td><%= @item.category.name %></td>
			</tr>
			<tr>
				<th class="small">税込価格（税抜価格）</th>
				<td><%= @item.zeikomi %>（<%= @item.price %>）円</td>
			</tr>
			<tr>
				<th class="small">販売ステータス</th>
				<td><%= @item.status %></td>
			</tr>
		</table>
	</div>

	<div class="row">
			<%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-primary btn-lg offset-md-10" %>
	</div>
</div>