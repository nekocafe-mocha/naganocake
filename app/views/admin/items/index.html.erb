<h2>商品一覧画面</h2>

<%= link_to '+', new_admin_item_path %>

<table class="table">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
  <% @items.each do |item| %>
	<tbody>
		<tr>
			<td>
				<%= item.id %>
			</td>
			<td>
				<%= link_to item.name, admin_item_path(item) %>
			</td>
			<td>
				<%= item.price %>
			</td>
			<td>
				<%= item.category.name %>
			</td>
			<td>
				<%= item.status %>
			</td>
		</tr>
	</tbody>
  <% end %>
</table>
