<div class="container">
	<h2 class="font-weight-bold mb-4">ジャンル追加・一覧画面</h2>
	<div class="row">
		<div class="col-md-6">
			<%= form_for(@category, url: admin_categories_path) do |f| %>
				<%= f.label "ジャンル" %>
				<%= f.text_field :name, style: "margin-left: 10px" %>
				<%= f.radio_button :status, "有効", style: "margin-left: 10px" %>
				<%= f.label :status, "有効" %>
				<%= f.radio_button :status, "無効", style: "margin-left: 10px" %>
				<%= f.label :status, "無効" %>
				<%= f.submit "追加", class: "btn btn-primary", style: "margin-left: 20px" %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-5" style="margin-top: 30px;">
			<table class="table">
				<thead class="thead-light">
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
			  <% @categories.each do |category| %>
				<tbody>
					<tr>
						<td>
							<%= category.name %>
						</td>
						<td>
							<%= category.status %>
						</td>
						<td>
							<%= link_to '編集する', edit_admin_category_path(category), class: "btn btn-primary" %>
						</td>
					</tr>
				</tbody>
			  <% end %>
			</table>
		</div>
	</div>
</div>
