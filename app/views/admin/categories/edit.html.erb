<div class="container">
	<h2 class="font-weight-bold mb-4">ジャンル編集画面</h2>
	<div>
		<%= form_for(@category, url: admin_category_path) do |f| %>
			<soan>ジャンル</soan>
			<%= f.text_field :name, style: "margin-left: 10px" %>
			<%= f.radio_button :status, "有効", style: "margin-left: 10px" %>
			<%= f.label :status, "有効" %>
			<%= f.radio_button :status, "無効", style: "margin-left: 10px" %>
			<%= f.label :status, "無効" %>
			<%= f.submit "変更を保存する", class: "btn btn-primary", style: "margin-left: 20px" %>
		<% end %>
	</div>
</div>