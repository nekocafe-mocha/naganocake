<div class="container">
  <h2 class="font-weight-bold mb-4">注文履歴一覧</h2>
  <div class="row">
    <table class="table col-md-10 mx-auto mb-4">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td>
              <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order) %>
            </td>
            <td><%= order.customer&.full_name %></td>
            <td><%= order.order_items.sum(:quantity) %></td>
            <td><%= order.status %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= paginate @orders, class: "paginate" %>
  </div>
</div>