<div class="container">
  <div class="row">
  	<div class="col-xs-6">
  	  <h2 class="mb-4">会員編集画面</h2>
  	  <%= form_for(@customer, url: admin_customer_path) do |f| %>
        <div>
          <p>会員ID　　<%= @customer.id %></p>
        </div>
        <div class="form-group">
          <span>氏名</span>
          <%= f.text_field :family_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <span>フリガナ</span>
        <div class="form-group">
          <%= f.text_field :family_name_kana, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
        <span>郵便番号</span>
        <div class="form-group">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
        <span>住所</span>
        <div class="form-group">
          <%= f.text_area :address, class: "form-control" %>
        </div>
        <span>電話番号</span>
        <div class="form-group">
          <%= f.text_field :phone, class: "form-control" %>
        </div>
        <span>メールアドレス</span>
        <div class="form-group">
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <span>会員ステータス</span>
        <div  class="form-group">
          <%= f.radio_button :status, "有効" %>
          <%= f.label :status, "有効" %>
          <%= f.radio_button :status, "退会" %>
          <%= f.label :status, "退会済み" %>
        </div>
        <div class="form-group">
         <%= f.submit '変更をを保存する', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>