<div class="container">
  <div class="row">
  	<div class="col-md-6">
  	  <h2 class="font-weight-bold">会員編集画面</h2>
  	  <%= form_for(@customer, url: admin_customer_path) do |f| %>
        <div class="row">
          <p class="col-md-3">会員ID</p>
          <p class="col-md-4"><%= @customer.id %></p>
        </div>
        <div class="form-group row">
          <%= f.label "氏名", class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.text_field :family_name, class: "form-control" %>
          </div>
          <div class="col-md-4">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "フリガナ", class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.text_field :family_name_kana, class: "form-control" %>
          </div>
          <div class="col-md-4">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "郵便番号", class: "col-md-3 col-form-label" %>
          <div class="col-md-4">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "住所", class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "電話番号", class: "col-md-3 col-form-label" %>
          <div class="col-md-5">
            <%= f.text_field :phone, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "メールアドレス", class: "col-md-3 col-form-label" %>
          <div class="col-md-5">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
            <%= f.label "会員ステータス", class: "col-md-3" %>
            <div class="col-md-2">
            <%= f.radio_button :status, "有効" %>
            <%= f.label :status, "有効" %>
          </div>
           <div class="col-md-3">
            <%= f.radio_button :status, "退会" %>
            <%= f.label :status, "退会済み" %>
          </div>
        </div>

         <%= f.submit '変更をを保存する', class: "btn btn-primary" %>

      <% end %>
    </div>
  </div>
</div>