<h2>会員一覧画面</h2>

<table class="table">
	<thead>
		<tr>
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	</thead>
  <% @customers.each do |customer| %>
  	<tbody>
  		<tr>
  			<td>
  				<%= customer.id %>
  			</td>
  			<td>
  				<%= link_to admin_customer_path(customer) do %>
  					<%= customer.family_name %> <%= customer.first_name %>
  				<% end %>
  			</td>
  			<td>
  				<%= customer.email %>
  			</td>
  			<td>
  				<%= customer.status %>
  			</td>
  		</tr>
  	</tbody>
  <% end %>
</table>